<?xml version='1.0' encoding='utf-8'?>
<widget id="com.managementspielzeug.rescan" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ReScan</name>
    <description>
        My own Barcodescanner. Without ads. Without bloat.
    </description>
    <author email="rescan@managementspielzeug.com" href="http://rescan.managementspielzeug.com">
        An App by Managementspielzeug.com
    </author>
    <content src="index.html" />

    <plugin name="cordova-plugin-whitelist" />
    <plugin name="cordova-plugin-device" />
    <plugin name="cordova-plugin-social-message"/>
    <plugin name="phonegap-plugin-barcodescanner"/>

    <access origin="*" />

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
